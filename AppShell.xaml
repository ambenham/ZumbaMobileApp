<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="ZumbaMobileApp.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:ZumbaMobileApp"
    Shell.FlyoutBehavior="Disabled">

    <ShellContent
        ContentTemplate="{DataTemplate local:ConcessionDetailPage}"
        Route="ConcessionDetailPage" />

    <Shell.TitleView>
        <HorizontalStackLayout
                HorizontalOptions="End">
            <ImageButton Source="settings_icon.svg"
                Padding="0,0,5,0"/>
            <ImageButton Source="menu_icon.svg"
                         Padding="0,0,5,0"/>
        </HorizontalStackLayout>
    </Shell.TitleView>

</Shell>
